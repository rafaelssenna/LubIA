{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_22", "pnpm"]
        },
        "install": {
          "cmds": ["pnpm install --frozen-lockfile"]
        },
        "build": {
          "cmds": ["pnpm turbo build --filter=@lubia/web"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "pnpm --filter @lubia/web start",
    "restartPolicyType": "ON_FAILURE"
  }
}

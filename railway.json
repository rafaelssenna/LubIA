{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20"]
        },
        "install": {
          "dependsOn": ["setup"],
          "cmds": ["corepack enable", "corepack prepare pnpm@9.0.0 --activate", "pnpm install"]
        },
        "build": {
          "dependsOn": ["install"],
          "cmds": ["pnpm --filter @lubia/web build"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "pnpm --filter @lubia/web start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
